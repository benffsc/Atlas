# Atlas Web App Environment Variables
# Copy this to .env.local and fill in your values
# Last updated: 2026-01-18

# ============================================
# REQUIRED: Database Connection
# ============================================
# Get from: Supabase Dashboard > Project Settings > Database > Connection string
DATABASE_URL=postgres://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# ============================================
# REQUIRED: Authentication & Security
# ============================================
# Default password for new staff accounts (they must change on first login)
# Choose a secure temporary password
STAFF_DEFAULT_PASSWORD=your_secure_default_password

# Session duration in hours (default: 24)
SESSION_EXPIRY_HOURS=24

# Access code for legacy verification (if used)
# ATLAS_ACCESS_CODE=your_access_code

# ============================================
# REQUIRED: External APIs
# ============================================

# Anthropic API Key (for Tippy AI assistant)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# Google Maps/Places API Key
# Get from: Google Cloud Console > APIs & Services > Credentials
# Required APIs: Places API, Geocoding API, Maps Static API
GOOGLE_PLACES_API_KEY=AIza...
GOOGLE_MAPS_API_KEY=AIza...

# ============================================
# OPTIONAL: File Storage (Supabase)
# ============================================
# For media uploads (photos, documents)
# Get from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://[PROJECT-REF].supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# ============================================
# OPTIONAL: Email (Resend)
# ============================================
# For sending emails (notifications, confirmations)
# Get from: https://resend.com/
RESEND_API_KEY=re_...
EMAIL_FROM=Forgotten Felines <noreply@forgottenfelines.org>

# ============================================
# OPTIONAL: Airtable Integration
# ============================================
# For syncing with Airtable databases
# Get from: Airtable > Account > API > Personal access token
AIRTABLE_PAT=pat...
AIRTABLE_ATLAS_SYNC_BASE_ID=app...
AIRTABLE_PUBLIC_INTAKE_TABLE_ID=tbl...

# ============================================
# OPTIONAL: Cron Jobs & Webhooks
# ============================================
# Secret for authenticating cron job requests
# Generate a secure random string
CRON_SECRET=your_cron_secret

# Webhook secret for external webhooks
WEBHOOK_SECRET=your_webhook_secret

# ============================================
# OPTIONAL: Intake Form
# ============================================
# Comma-separated list of allowed origins for CORS on intake API
INTAKE_ALLOWED_ORIGINS=https://yoursite.com,https://anothersite.com

# ============================================
# OPTIONAL: E2E Testing
# ============================================
# Token for authenticating E2E test cleanup requests
E2E_TEST_TOKEN=e2e-test-token-dev

# ============================================
# OPTIONAL: Production Safety
# ============================================
# Set to 'true' ONLY if you want to enable test mode in production
# WARNING: This allows database table truncation - NOT RECOMMENDED
# ALLOW_TEST_MODE=false

# ============================================
# AUTO-SET BY VERCEL (do not set manually)
# ============================================
# VERCEL=1
# VERCEL_URL=your-app.vercel.app
# NODE_ENV=production
